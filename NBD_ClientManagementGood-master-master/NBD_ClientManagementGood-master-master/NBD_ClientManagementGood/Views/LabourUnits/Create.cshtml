@model NBD_ClientManagementGood.Models.LabourUnit

@{
    ViewData["Title"] = "Create";
}
    <div class="text-success">
        <div class="text-center">
            <h1> Create New Labour Unit</h1>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3"></div>
            <form asp-action="Create" class="col-sm-6">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="Hours" class="control-label"></label>
                        <input asp-for="Hours" class="form-control" />
                        <span asp-validation-for="Hours" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="Cost" class="control-label"></label>
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="EstCost" class="control-label"></label>
                        <input asp-for="EstCost" class="form-control" />
                        <span asp-validation-for="EstCost" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="TaskName" class="control-label"></label>
                        <input asp-for="TaskName" class="form-control" />
                        <span asp-validation-for="TaskName" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="TaskDescription" class="control-label"></label>
                        <input asp-for="TaskDescription" class="form-control" />
                        <span asp-validation-for="TaskDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:330px;">
                        <input type="submit" value="Create" style="float:left;margin-left:50px;" class="btn btn-outline-success" />
                        <a asp-action="Index" style="float:right;margin-left:50px;" class="btn btn-outline-success">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
