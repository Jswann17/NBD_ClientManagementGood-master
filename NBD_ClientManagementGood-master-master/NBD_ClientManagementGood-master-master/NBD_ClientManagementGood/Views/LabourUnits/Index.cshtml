@model IEnumerable<NBD_ClientManagementGood.Models.LabourUnit>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center text-success">
    <h1>Labour Unit</h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-success text-center">Create New Client</a>
    </p>
</div>
<table class="table table-hover table-bordered bg-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-light">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-success">Update</a> 
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-success">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
