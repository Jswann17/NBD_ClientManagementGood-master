@model IEnumerable<NBD_ClientManagementGood.Models.Bid>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-dark">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-hover table-bordered bg-colour2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlueprintCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                Items
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlueprintCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @foreach (var s in item.InvBids)
                {
                    @s.Item.Code <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-success">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
