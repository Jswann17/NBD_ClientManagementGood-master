@model NBD_ClientManagementGood.Models.Bid

@{
    ViewData["Title"] = "Edit";
}

    <div class="text-success">
        <div class="text-center">
            <h1>Update Bid</h1>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3"></div>
            <form asp-action="Edit" class="col-sm-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group float-xl-left p-3">
                    <label asp-for="BlueprintCode" class="control-label"></label>
                    <input asp-for="BlueprintCode" class="form-control" />
                    <span asp-validation-for="BlueprintCode" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="EstStart" class="control-label"></label>
                    <input asp-for="EstStart" class="form-control" />
                    <span asp-validation-for="EstStart" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="EstEnd" class="control-label"></label>
                    <input asp-for="EstEnd" class="form-control" />
                    <span asp-validation-for="EstEnd" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="ProjectID" class="control-label"></label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                    <span asp-validation-for="ProjectID" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:330px;">
                    <input type="submit" value="Update"  style="float:left; margin-left:50px;" class="btn btn-outline-success" />
                    <a asp-action="Index" style="float:right; margin-left:50px;" class="btn btn-outline-success">Cancel</a>
                </div>
            </form>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
