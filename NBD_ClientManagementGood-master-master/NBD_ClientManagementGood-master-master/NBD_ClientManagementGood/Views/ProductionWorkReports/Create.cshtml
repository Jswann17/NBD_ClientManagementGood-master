@model NBD_ClientManagementGood.Models.ProductionWorkReport

@{
    ViewData["Title"] = "Create";
}
<div class="text-success">
    <div class="text-center">
        <h1>Create New Production Work Report</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-3"></div>
        <form asp-action="Create" class="col-sm-6">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="Submitter" class="control-label"></label>
                    <input asp-for="Submitter" class="form-control" />
                    <span asp-validation-for="Submitter" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="SubmissionDate" class="control-label"></label>
                    <input asp-for="SubmissionDate" class="form-control" />
                    <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                </div>
            </fieldset>
            <div class="form-group" style="width:330px;">
                <input type="submit" value="Create" style="float:left;margin-left:50px;" class="btn btn-outline-success" />
                <a asp-action="Index" style="float:right;margin-left:50px;" class="btn btn-outline-success">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
