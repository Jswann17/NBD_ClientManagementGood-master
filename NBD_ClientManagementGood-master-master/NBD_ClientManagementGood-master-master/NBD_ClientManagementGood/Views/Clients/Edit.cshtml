@model NBD_ClientManagementGood.Models.Client

@{
    ViewData["Title"] = "Edit";
}

    <div class="text-success">
        <div class="text-center">
            <h1>Update Client</h1>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3"></div>
            <form asp-action="Edit" class="col-sm-6">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" value="Demo" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" value="Person" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" value="Three" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" value="123 Demo" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="eMail" class="control-label"></label>
                        <input asp-for="eMail" class="form-control" value="DemoDude@demos.com" />
                        <span asp-validation-for="eMail" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="PostalCode" class="control-label"></label>
                        <input asp-for="PostalCode" class="form-control" value="D4E M20" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" value="0987654321" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group float-xl-left p-3">
                        <label asp-for="CityID" class="control-label"></label>
                        <select asp-for="CityID" class="form-control" asp-items="ViewBag.CityID"></select>
                    </div>
                    <div class="form-group" style="width:330px;">
                        <input type="submit" value="Update" style="float:left;margin-left:50px;" class="btn btn-outline-success" />
                        <a asp-action="Index" style="float:right;margin-left:50px;" class="btn btn-outline-success">Cancel</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
