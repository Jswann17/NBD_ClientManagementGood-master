@model IEnumerable<NBD_ClientManagementGood.Models.LabourReport>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center text-success">
    <h1>Labour Report</h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-success text-center">Create New Labour Report</a>
    </p>
</div>
<table class="table table-hover table-bordered bg-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submitter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-light">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Submitter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmissionDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-success">Update</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-success">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
