@model NBD_ClientManagementGood.Models.LabourDepartment

@{
    ViewData["Title"] = "Create";
}
<div class="text-success">
    <div class="text-center">
        <h1>Create New Labour Department</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-3"></div>
        <form asp-action="Create" class="col-sm-6">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group float-xl-left p-3">
                    <label asp-for="DepartmentDescription" class="control-label"></label>
                    <input asp-for="DepartmentDescription" class="form-control" />
                    <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                </div>
            </fieldset>
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label"> Staff on team</label>
                        <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                            <strong>-</strong>
                        </button>
                        @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"> Choose Staff</label>
                        <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                            <strong>+</strong>
                        </button>
                        @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group" style="width:330px;">
                <input type="submit" value="Create" style="float:left;margin-left:50px;" class="btn btn-outline-success" />
                <a asp-action="Index" style="float:right;margin-left:50px;" class="btn btn-outline-success">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/multiselect.js"></script>
}
