@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <div class="text-center text-success">
        <h1 class="display-4">Welcome to </h1>
        <h4>Natural By Deisgn.</h4>
    </div>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">

            @*Indicators*@
            <ul class="carousel-indicators m-5">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ul>

            @*The slideshow*@
            <div class="carousel-inner m-5">
                <div class="carousel-item active">
                    <img src="~/images/hero1.jpg" alt="Los Angeles" width="1100" height="300">
                    <div class="card-img-overlay text-white-50 d-flex justify-content-center align-items-center">
                        <h1>Natural By Design.</h1>
                    </div>

                </div>
                <div class="carousel-item">
                    <img src="~/images/hero2.jpg" alt="Chicago" width="1100" height="300">
                    <div class="card-img-overlay text-black-50 d-flex justify-content-center align-items-center">
                        <h1>Natural By Design.</h1>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/hero3.jpg" alt="New York" width="1100" height="300">
                    <div class="card-img-overlay text-white d-flex justify-content-center align-items-center">
                        <h1>Natural By Design.</h1>
                    </div>
                </div>
            </div>

            @*Left and right controls*@
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>

<h2 class="text-black-50">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section class="align-content-md-center">
            <form id="account" method="post" >
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-black-50 h4"></label>
                    <input asp-for="Input.Email" class="form-control shadow-lg border-success" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-black-50 h4"></label>
                    <input asp-for="Input.Password" class="form-control shadow-lg border-success" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class=" text-black-50 ">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-black-50 ">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
