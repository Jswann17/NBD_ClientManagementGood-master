@model NBD_ClientManagementGood.Models.Production

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Production</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="LabourDepartmentID" class="control-label"></label>
                    <select asp-for="LabourDepartmentID" class="form-control" asp-items="ViewBag.LabourDepartmentID"></select>
                </div>
                <label asp-for="ProEstHourly" class="control-label"></label>
                <input asp-for="ProEstHourly" class="form-control" />
                <span asp-validation-for="ProEstHourly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProEstMaterialCost" class="control-label"></label>
                <input asp-for="ProEstMaterialCost" class="form-control" />
                <span asp-validation-for="ProEstMaterialCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProEstTotalHours" class="control-label"></label>
                <input asp-for="ProEstTotalHours" class="form-control" />
                <span asp-validation-for="ProEstTotalHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProBidPercent" class="control-label"></label>
                <input asp-for="ProBidPercent" class="form-control" />
                <span asp-validation-for="ProBidPercent" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label"> Units Chosen </label> <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                            <strong>-</strong>
                        </button>
                        @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"> Choose Unit</label> <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                            <strong>+</strong>
                        </button>
                        @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BidID" class="control-label"></label>
                <select asp-for="BidID" class="form-control" asp-items="ViewBag.BidID"></select>
            </div>
            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
