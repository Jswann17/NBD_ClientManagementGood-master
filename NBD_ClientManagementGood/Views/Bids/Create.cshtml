@model NBD_ClientManagementGood.Models.Bid

@{
    ViewData["Title"] = "Create";
}

    <div class="text-success">
        <div class="text-center">
            <h1>Create New Bid</h1>
        </div>          
            <hr />
            <div class="row">
                <div class="col-sm-3"></div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BlueprintCode" class="control-label"></label>
                        <input asp-for="BlueprintCode" class="form-control" value="A6B5C4D3E2F1"/>
                        <span asp-validation-for="BlueprintCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EstStart" class="control-label"></label>
                        <input asp-for="EstStart" class="form-control" value="2020-02-31" />
                        <span asp-validation-for="EstStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EstEnd" class="control-label"></label>
                        <input asp-for="EstEnd" class="form-control" value="2020-04-20"/>
                        <span asp-validation-for="EstEnd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" value="999.44" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input asp-for="Location" class="form-control" value="Everywhere"/>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectID" class="control-label"></label>
                        <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                    </div>
                    <div class="form-group" style="float:left;width:330px;">
                        <input type="submit" value="Create" style="float:right;margin-left:10px;" class="btn btn-outline-success" />
                        <a asp-action="Index" style="float:right;" class="btn btn-outline-success">Back to List </a>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
