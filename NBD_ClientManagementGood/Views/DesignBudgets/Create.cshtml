@model NBD_ClientManagementGood.Models.DesignBudget

@{
    ViewData["Title"] = "Create";
}

<div class="text-success">
    <div class="text-center">
        <h1>Create New Design Budget</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="col-sm-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentHours" class="control-label"></label>
                    <input asp-for="CurrentHours" class="form-control" />
                    <span asp-validation-for="CurrentHours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EstHours" class="control-label"></label>
                    <input asp-for="EstHours" class="form-control" />
                    <span asp-validation-for="EstHours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoursTotal" class="control-label"></label>
                    <input asp-for="HoursTotal" class="form-control" />
                    <span asp-validation-for="HoursTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubmissionDate" class="control-label"></label>
                    <input asp-for="SubmissionDate" class="form-control" />
                    <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Submitter" class="control-label"></label>
                    <input asp-for="Submitter" class="form-control" />
                    <span asp-validation-for="Submitter" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:330px;">
                    <input type="submit" value="Create" style="float:left;margin-left:50px;" class="btn btn-outline-success" />
                    <a asp-action="Index" style="float:right;margin-left:50px;" class="btn btn-outline-success">Back to List </a>
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
